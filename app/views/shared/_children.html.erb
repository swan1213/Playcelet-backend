<div class="page-header">
  <h1><%=t '.title', :default => "Children: #{children.count}" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Family</th>
      <th>Playcelet</th>
      <th>Color</th>
      <th>Supervisor</th>
      <th>At Place/Family</th>
      <th>Located at</th>
    </tr>
  </thead>

  <tbody>
    <% children.each do |child| %>
      <tr>
        <td><%= link_to child.name, child %></td>
        <td><%= link_to child.family.name, child.family %></td>
        <td style="background-color: #<%= child.color %>"><%= link_to child.playcelet, child_path(child), title: child.mac_address %></td>
        <td style="background-color: #<%= child.color %>"><%= link_to child.color_name, child_path(child), title: child.color %></td>
        <% supervisor = child.app.supervisor if child.app %>
        <td><%= link_to(supervisor.name, supervisor) if supervisor %></td>
        <td><%= link_to(supervisor.place.name, supervisor.place) if supervisor %></td>
        <td><%= child.located_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
