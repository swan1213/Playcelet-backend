<%- model_class = Child -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:family_id) %></th>
      <th colspan="4"><%= model_class.human_attribute_name(:playcelet) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= link_to child.id, child_path(child) %></td>
        <td><%= link_to child.first_name, child_path(child) %></td>
        <td><%= link_to child.last_name, child_path(child) %></td>
        <td><%= link_to child.family.name, child.family %></td>
        <td style="background-color: #<%= child.color %>"><%= child.playcelet %></td>
        <td style="background-color: #<%= child.color %>"><%= child.mac_address %></td>
        <td style="background-color: #<%= child.color %>"><%= child.color %></td>
        <td style="background-color: #<%= child.color %>"><%= child.color_name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_child_path(child), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      child_path(child),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_child_path,
            :class => 'btn btn-primary' %>
