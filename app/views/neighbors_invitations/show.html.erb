<%- model_class = NeighborsInvitation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:family_id) %>:</strong></dt>
  <dd><%= @neighbors_invitation.family_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighbor_id) %>:</strong></dt>
  <dd><%= @neighbors_invitation.neighbor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @neighbors_invitation.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @neighbors_invitation.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:initial_text) %>:</strong></dt>
  <dd><%= @neighbors_invitation.initial_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:respond_by_id) %>:</strong></dt>
  <dd><%= @neighbors_invitation.respond_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:response_text) %>:</strong></dt>
  <dd><%= @neighbors_invitation.response_text %></dd>
  <dt><strong><%= model_class.human_attribute_name(:respond_at) %>:</strong></dt>
  <dd><%= @neighbors_invitation.respond_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              neighbors_invitations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_neighbors_invitation_path(@neighbors_invitation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              neighbors_invitation_path(@neighbors_invitation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
