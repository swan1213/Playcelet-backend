<%- model_class = NeighborsFamiliesLink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:family_id) %></th>
      <th><%= model_class.human_attribute_name(:neighbor_id) %></th>
      <th><%= model_class.human_attribute_name(:neighbors_invitation_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @neighbors_families_links.each do |neighbors_families_link| %>
      <tr>
        <td><%= link_to neighbors_families_link.id, neighbors_families_link_path(neighbors_families_link) %></td>
        <td><%= neighbors_families_link.family_id %></td>
        <td><%= neighbors_families_link.neighbor_id %></td>
        <td><%= neighbors_families_link.neighbors_invitation_id %></td>
        <td><%=l_with_time_zone neighbors_families_link.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_neighbors_families_link_path(neighbors_families_link), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      neighbors_families_link_path(neighbors_families_link),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_neighbors_families_link_path,
            :class => 'btn btn-primary' %>
