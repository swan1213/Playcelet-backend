<%- model_class = NeighborsFamiliesLink -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:family_id) %>:</strong></dt>
  <dd><%= @neighbors_families_link.family_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighbor_id) %>:</strong></dt>
  <dd><%= @neighbors_families_link.neighbor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:neighbors_invitation_id) %>:</strong></dt>
  <dd><%= @neighbors_families_link.neighbors_invitation_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              neighbors_families_links_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_neighbors_families_link_path(@neighbors_families_link), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              neighbors_families_link_path(@neighbors_families_link),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
